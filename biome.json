{
  "$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
  "vcs": {
    "enabled": false,
    "defaultBranch": "master",
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space"
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "arrowParentheses": "asNeeded",
      "jsxQuoteStyle": "double",
      "lineWidth": 80
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noExplicitAny": "off"
      }
    }
  },
  "organizeImports": {
    "enabled": false
  },
  "files": {
    "ignoreUnknown": true,
    "ignore": [".vscode/**/*", "node_modules/**/*", "dist/**/*"]
  }
}
